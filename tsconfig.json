{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": [
      "@cloudflare/workers-types",
      "bun",
      "node"  // <--- Add "node" here now that you have nodejs_compat
    ], // Use these instead of "node"
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noEmit": true
  },
  "include": ["src/**/*", "worker-configuration.d.ts"]
}